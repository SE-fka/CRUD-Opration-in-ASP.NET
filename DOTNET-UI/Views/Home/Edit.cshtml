@model UsersModel

<div class="container">
    <div class="col-xs-12">
        <div style="padding-left:20px;">
            <h4>Edit User</h4>
        </div>
        <div class="box">
            <div class="box-header">
            </div><!-- /.box-header -->

            <form method="post" asp-action="Edit" style="padding:3%;">
                <!-- <div asp-validation-summary="All"></div> -->
                <input asp-for="UserID" hidden />
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Firstname ">First Name</label>
                        <input type="text" class="form-control" asp-for="Firstname" value="@Model.Firstname" required="true">
                        
                    </div>
                    <div class="form-group">
                        <label asp-for="Lastname">Last Name</label>
                        <input type="text" class="form-control" asp-for="Lastname" value="@Model.Lastname" required="true">
                      
                    </div>
                    <div class="form-group">
                        <label asp-for="Userrole">User Role</label>
                        <input type="text" class="form-control" asp-for="Userrole" value="@Model.Userrole" required="true">
                        <span asp-validation-for="Userrole" class=" alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input type="email" class="form-control" asp-for="Email" value="@Model.Email" required="true">
                 
                    </div>
                </div>
                <div style="padding:20px;">
                    <button style="width:25%" type="submit" class="btn btn-primary"><i class="bi bi-file-plus-fill"></i>Update</button>
                </div>
            </form>

        </div>

    </div>
</div>

