@model UsersModel

<div class="container">
 <div class="col-xs-12">
        <div style="padding-left:20px;">
            <h4>Add User</h4>
        </div>
        <div class="box">
            <div class="box-header">
            </div><!-- /.box-header -->

            <form method="post" style="padding:3%;">
                <!-- <div asp-validation-summary="All"></div> -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="Firstname ">First Name</label>
                <input type="text" class="form-control" asp-for="Firstname " placeholder="Enter Firstname" required="true">
                        <!--<span asp-validation-for="Firstname" class=" alert-danger"></span> -->
            </div>
            <div class="form-group">
                 <label asp-for="Lastname">Last Name</label>
                        <input type="text" class="form-control" asp-for="Lastname" placeholder="Enter Lastname" required="true">
                 
            </div>        
            <div class="form-group">
                <label asp-for="Userrole">User Role</label>
                        <input type="text" class="form-control" asp-for="Userrole" placeholder="Enter Userrole" required="true">
            
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                        <input type="email" class="form-control" asp-for="Email" placeholder="Enter Email" required="true">
                 
            </div>
          </div>
          <div style="padding:20px;">
             <button style="width:25%" type="submit" class="btn btn-primary"><i class="bi bi-file-plus-fill"></i>Save</button>
         </div>
    </form>

</div>
 <script>
        window.onload = function () {
            _getAll();
        };
    </script>
</div>
</div>

